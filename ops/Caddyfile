grafana.{env.DOMAIN} {
	import certificates
	handle {
		header Access-Control-Allow-Methods "GET"
		header Access-Control-Allow-Origin grafana.{env.DOMAIN}
		root * /www
		file_server
		templates
	}

	handle_path /dash* {
		reverse_proxy grafana:3000
	}
}

:9321 {
	metrics /metrics
}
